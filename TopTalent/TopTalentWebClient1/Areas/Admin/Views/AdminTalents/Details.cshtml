@model TopTalentWebClient1.Models.Talent

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminTalents" asp-action="Index">Quản lý Talent</a>
            <span class="breadcrumb-item active">Thông tin chi tiết Talent</span>
        </nav>
    </div>
</div>
<div class="card-body">
    <h1>Information</h1>
    <h4 class="card-title">@Model.FullName</h4>
    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID</td>
                    <td class="text-dark font-weight-semibold">@Model.TalentId</td>
                </tr>
                <tr>
                    <td>Image</td>
                    <td class="text-dark font-weight-semibold"><img style="width:400px; height:400px" src="~/img-talent/@Model.Image" /></td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td class="text-dark font-weight-semibold">@Model.Username</td>
                </tr>
                <tr>
                    <td>Password</td>
                    <td class="text-dark font-weight-semibold">@Model.Password</td>
                </tr>
                <tr>
                    <td>Phone</td>
                    <td class="text-dark font-weight-semibold">@Model.Phone</td>
                </tr>
                <tr>
                    <td>Address</td>
                    <td class="text-dark font-weight-semibold">@Model.Address</td>
                </tr>
                 <tr>
                    <td>Job Title</td>
                    <td class="text-dark font-weight-semibold">@Model.JobTitle</td>
                </tr>
                <tr>
                    <td>Price</td>
                    <td class="text-dark font-weight-semibold">@Model.Price</td>
                </tr>
               
                <tr>
                    <td>Description</td>
                    <td class="text-dark font-weight-semibold">@Model.Description</td>
                </tr>
                <tr>
                    <td>Status</td>
                    <td class="text-dark font-weight-semibold">@Model.Status</td>
                </tr>


            </tbody>
        </table>

    </div>
    <div>
        <a class="btn btn-primary m-r-5" asp-action="Edit" asp-route-id="@Model.TalentId">Edit</a> |
        <a class="btn btn-success  m-r-5" asp-action="Index">Back to List</a>
    </div>
</div>
