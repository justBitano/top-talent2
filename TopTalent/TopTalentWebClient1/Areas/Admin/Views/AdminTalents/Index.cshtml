@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<TopTalentWebClient1.Models.Talent>
@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách Talent" + CurrentPage;
     Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; 
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>

            <span class="breadcrumb-item active">Danh sách Talent : page @CurrentPage</span>
        </nav>
    </div>
</div>
<class ="page-header">
    <h3>Talent New</h3>
    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">
                <div class="col-lg-8">
                    <div class="d-md-flex">
                        <div class="m-b-10 m-r-15">

                            <select class="custom-select" style="min-width: 180px; id="idjobtitle" name="idjobtitle" asp-items="ViewBag.lsJobTitle">
                                <option value="null" disable selected>Choose Job</option>
                            </select>
                        </div>
                        <div class="m-b-10">
                            <select class="custom-select" style="min-width: 180px; id="idstatus" name="idstatus" asp-items="ViewBag.lsStatus">
                                <option value="null" disable selected>Status</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-right">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="anticon anticon-plus-circle m-r-5"></i>
                        <span>Add Talent</span>
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover e-commerce-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>FullName</th>
                            <th>JobTitle</th>
                            <th>Image</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>#</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                if (item.Status == 1)
                                {
                                    <tr>
                                        <td>
                                            @item.TalentId
                                        </td>
                                        <td>
                                            @item.Username
                                        </td>
                                        <td>@item.FullName</td>
                                        <td>@item.JobTitle</td>
                                        <td>
                                            <img style="width:120px; height:120px" src="~/img-talent/@item.Image" />
                                        </td>
                                        <td>@item.Description</td>
                                        <td>
                                            @if (item.Status == 0)
                                            {
                                                <div class="d-flex align-items-center">
                                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                                    <div>Active</div>
                                                </div>
                                            }
                                            else if (item.Status == 1)
                                            {
                                                <div class="d-flex align-items-center">
                                                    <div class="badge badge-danger badge-dot m-r-10"></div>
                                                    <div>Block</div>
                                                </div>
                                            }
                                        </td>

                                        <td>
                                            <a class="btn  btn-primary m-r-5" asp-action="Edit" asp-route-id="@item.TalentId">Edit</a> |
                                            <a class="btn  btn-info  m-r-5" asp-action="Details" asp-route-id="@item.TalentId">Details</a> |
                                            <a class="btn  btn-danger  m-r-5" asp-action="Delete" asp-route-id="@item.TalentId">Delete</a> |
                                        </td>
                                    </tr>
                                }


                            }

                        }


                    </tbody>
                </table>
        @*        <div aria-label="Page navigation example">
                    <ul class="pagination">
                        <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminTalents" asp-action="Index" />
                    </ul>

                </div>*@
            </div>
        </div>
    </div>


